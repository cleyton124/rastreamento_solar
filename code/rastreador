#include <Servo.h>

#define LDR_1 A0
#define LDR_2 A1

Servo meuservo;
int pos = 90; //posição inicial do servo
void setup()
{
 pinMode(LDR_1,INPUT);
 pinMode(LDR_2,INPUT);
 meuservo.attach(3);
 meuservo.write(pos);
 Serial.begin(9600);
}
void loop()
{
 int ldr_esq = analogRead(LDR_1);
 int ldr_dir = analogRead(LDR_2);
  
 int diferenca = ldr_esq - ldr_dir;
 
 pos = map(diferenca, -100, 100, 0, 180);
 
 
 pos = constrain (pos, 0, 180);
 meuservo.write(pos);
 Serial.print("LDR esquerdo :");
 Serial.println(ldr_esq);
 Serial.print("LDR direito :");
 Serial.println(ldr_dir);

 delay(50);

}
